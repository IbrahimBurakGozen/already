{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/public/*": ["public/*"],
			"@/common/*": ["src/common/*"],
			"@/modules/*": ["src/modules/*"],
			"@/styles/*": ["src/styles/*"],
			"@/utils/*": ["src/utils/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/pages/index.server.jsx",
		"src/pages/_app.tjsx"
	],
	"exclude": ["node_modules"]
}
